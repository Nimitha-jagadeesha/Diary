<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@mipmap/backgroung"
    tools:context=".Diary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/mainActivity_TextView_date"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/diary_Button_DatePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="30dp"
            android:onClick="onClickDatePicker"
            android:background="@color/DarkBlue"
            android:textColor="@color/white"
            android:text="@string/datepicker" />

    </LinearLayout>

    <EditText
        android:id="@+id/diary_EditText_Data"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="15dp"
        android:background="@color/DarkBlue"
        android:fontFamily="@font/cookie_regular"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:inputType="textMultiLine" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:onClick="onClickSave"
        android:background="@color/DarkBlue"
        android:textColor="@color/white"
        android:text="@string/save"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:onClick="onClickNext"
        android:background="@color/DarkBlue"
        android:textColor="@color/white"
        android:text="@string/next"/>

</LinearLayout>