<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@mipmap/backgroung"
    tools:context=".ThirdActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/thirdActivity_TextView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="35sp"/>

        <Button
            android:id="@+id/third_Button_DatePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="30dp"
            android:onClick="onClickDatePicker"
            android:background="@color/DarkBlue"
            android:textColor="@color/white"
            android:text="@string/datepicker" />
    </LinearLayout>

    <EditText
        android:id="@+id/third_EditText_Data"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="15dp"
        android:background="@color/DarkBlue"
        android:textColor="@color/white"
        android:fontFamily="@font/cookie_regular"
        android:textSize="30sp"
        android:inputType="textMultiLine" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:onClick="onClickShow"
        android:background="@color/DarkBlue"
        android:textColor="@color/white"
        android:text="@string/show"/>

</LinearLayout>